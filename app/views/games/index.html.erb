<div class="span8">

    <p class="pull-right">
        <%= "You have #{@play_count} picks for this week" %>
    </p>
    <h2 >Current Matchups</h2>
    <br/>

    <table class="table table-bordered table-condensed" width="55%">
    <thead>
      <tr>
        <th>Favorite </th>
        <th>Underdog </th>
        <th>Total</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
        <% @games.each do |game| %>
          <tr>
            
            <td><%= game.index_favorite + " (-#{game.line})"  %></td>
            <td><%= game.index_underdog %> </td>
            <td><%= game.total %></td>
           
            <td><%= link_to 'Details', game, :class => "btn btn-primary" %>

            <% if can? :update, game %>
                <%= link_to 'Edit', edit_game_path(game), :class => "btn " %>
                <%= link_to 'Delete', game, confirm: 'Are you sure?', :method => :delete, :class => "btn btn-danger",    %>
                
            <% end %>
            </td>
        </tr>
      
        <% end %>  
    </tbody> 
    </table>

    <br />
</div>

