    <div class="field">
      <%= f.label :home_team %><br />
      <%= f.select :home_team, Game::TEAMS %>
    </div>
    <div class="field">
      <%= f.label :visitor_team %><br />
      <%= f.select :visitor_team, Game::TEAMS %>
    </div>
    <div class="field">
      <%= f.label :favorite %><br />
      <%= f.select :favorite, Game::TEAMS %>
    </div>
    <div class="field">
      <%= f.label :line %><br />
      <%= f.text_field :line %>
    </div>
  </div>

  <div class="span5">
    <div class="field">
      <%= f.label :total %><br />
      <%= f.text_field :total %>
    </div>

     <div class="field">
      <%= f.label :start_date %><br />
      <%= f.date_select :start_date %>
    </div>
    <div class="field">
      <%= f.label :kickoff %><br />
      <%= f.text_field :kickoff %>
    </div>
    <div class="field">
      <%= f.label :status %><br />
      <%= f.text_field :status %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  </div>

<% end %>
