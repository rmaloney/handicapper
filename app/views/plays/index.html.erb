 

   <h2>Your Picks</h2>

      <table width="65%" class="table table-bordered table-condensed">
        <thead>
        <tr>
          <th> Week     </th>
          <th>Home </th>
          <th>Away</th>
          <th>Your Pick</th>
          <th>Result</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
          <% @plays.each do |play| %>
            <tr>
               <td> <%= play.game.week %> </td>        
               <td> <%= play.game.home_team %>  </td>
               <td> <%= play.game.visitor_team %> </td>
               <td> <%= play.selection_details %> </td>
               <td> <%= play.play_result %>
              <td>
                <div class= "btn-group">
                  <%= link_to 'Details', play_path(play) , :class => "btn" %>
                  <% if play.status == "Open" %>
                    <%= link_to 'Edit', edit_play_path(play), :class => "btn btn-primary" %>
                     <% if can? :destroy, play %>
                      <%= button_to 'Delete', play, confirm: 'Are you sure?', :method => :delete, :class => "btn btn-danger",    %>
                    <% end %>
                  <% end %>

                </div>
                </td>
              
            </tr>
        </tbody>
      <% end %>
      </table>

      <br />

      <%= link_to 'New Game', new_game_path %>
 