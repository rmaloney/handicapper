 <h1>Your Plays</h1>

    <table width="80%" class="table">
      <tr>
       
        <th>Selection </th>
       
       
        <th>Game ID</th>
        <th>Status</th>
        <th></th>
      </tr>

    <% @plays.each do |play| %>
      <tr>
        
        
         <td> <%= play.selection %> </td>
         <td> <%= play.game_id %> </td>
         <td> <%= play.status %> </td>

        <td><%= link_to 'Show', play_path , :class => "btn" %></td>
        <td><%= link_to 'Edit', edit_game_play_path(play.game_id, play), :class => "btn" %></td>
        <td><%= link_to 'Delete', play, confirm: 'Are you sure?', :method => :delete, :class => "btn btn-danger",    %></td>
      </tr>
    <% end %>
    </table>

    <br />

    <%= link_to 'New Game', new_game_path %>
