

  <%= form_for(@play) do |f| %>
  	<% if @play.errors.any? %>
      <div class="alert">
        <h2>Oops, there were a few problems:</h2>

        <ul>
        <% @play.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>



  	<!-- Display information about the game !-->

    <fieldset>
      <legend> Edit your play </legend>
        	<h3 class="red"> <%= @play.game.index_favorite + "(-#{@play.game.line})" + " vs. " + @play.game.index_underdog %> </h3>  
          <%= link_to ' << Go Back', plays_path %> | <%= link_to 'Show', @play %> 



        	<!-- Information displayed in this form is related to the play being made on the game !-->
         <br/>
         <br/>
         <%= f.hidden_field(:game_id, :value => @game.id) %>
         <%= f.hidden_field(:user_id, :value => current_user.id ) %>
            

            <div class="controls">
         
            	<label><strong> Totals Betting </strong></label>
            	<label class="radio">
        	    	<%= f.radio_button :selection, "Under" %>
        	    	<%= "Under #{@game.total}" %>
        	    </label>
            	
            	<label class="radio">
            		<%= f.radio_button :selection, "Over" %>
            		<%= "Over #{@game.total}" %>
            	</label>


            </div>

            <br/>
            <div class="controls">
            	<label><strong> Pointspread Betting </strong> </label>
            	<label class="radio">
          			<%= f.radio_button :selection, "Favorite" %>
          			<%= @game.favorite + " -#{@game.line}" %>
        		  </label>

          		<label class="radio">
          			<%= f.radio_button :selection, "Underdog" %>
          			<%= @game.underdog+ " +#{@game.line}" %>
          		</label>
    </fieldset>
              <%= f.submit "Submit", :class => "btn btn-success" %>


      </div>

      <br/>

      
  <% end %>
      	
      

   


